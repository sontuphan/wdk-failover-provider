{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "moduleResolution": "bundler",
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "outDir": "./types"
  },
  "include": ["src/**/*.js"]
}
